{
  "functions": {
    "source": "functions",
    "predeploy": [
      "npm run lint"
    ]
  },
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 4200
    },
    "functions": {
      "port": 4200
    },
    "firestore": {
      "port": 4200
    },
    "database": {
      "port": 4200
    },
    "hosting": {
      "port": 4200
    },
    "pubsub": {
      "port": 4200
    },
    "storage": {
      "port": 4200
    },
    "ui": {
      "enabled": true,
      "port": 4200
    }
  },
  "remoteconfig": {
    "template": "remote.config.template.json"
  }
}
